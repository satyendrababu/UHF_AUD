<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Asset Code"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvAssetCode"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Capitalized On"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvDateOfPurchase"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Cost Ctr"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvSerialNo"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Asset Type"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvAssetType"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Inventory Status"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvInvStatus"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Inventory Location"
            android:textColor="#08308e"
            />

        <TextView
            android:id="@+id/tvInvLocation"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/rcb3"
            android:text=""/>
    </LinearLayout>



</LinearLayout>